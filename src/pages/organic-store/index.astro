---
import BannerLayout from "../../layout/bannerLayout.astro"
import MainLayout from "../../layout/mainLayout.astro"
import SectionLayout from "../../layout/sectionLayout.astro"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Organic Store</title>
	</head>
	<body>
		<MainLayout>
			<BannerLayout imageSrc="/organic-store/banner.webp" />
			<SectionLayout containerClass="flex justify-start self-center gap-x-[8rem] flex-wrap">
				<div class="flex flex-col">	
					<div class="font-bold text-[1.5rem]">Products by</div>
					<div class="flex items-center justify-center gap-6 flex-wrap">
						<img src="/organic-store/productsBy1.webp" alt=""  class="h-[100px]">
						<img src="/organic-store/productsBy2.webp" alt=""  class="h-[85px]">
						<img src="/organic-store/productsBy3.webp" alt=""  class="h-[90px]">
					</div>
				</div>
				<div class="flex flex-col">	
					<div class="font-bold text-[1.5rem]">Certified by</div>
					<div class="flex items-center justify-center gap-6 mt-4 flex-wrap">
						<img src="/organic-store/certifiedBy1.webp" alt="" class="h-[60px]">
						<img src="/organic-store/certifiedBy2.webp" alt="" class="h-[60px]">
					</div>
				</div>
			</SectionLayout>
			<SectionLayout containerClass="grid grid-cols-2 gap-[2px] grid-rows-[repeat(2,250px)] rounded-md truncate gap-[2px] max-[1150px]:grid-cols-1 max-[1150px]:grid-rows-[repeat(4,350px)]">
				<img src="/organic-store/store1.webp" alt="" class="h-full w-full row-span-2">
				<img src="/organic-store/store2.webp" alt="" class="h-full w-full row-span-1">
				<img src="/organic-store/store3.webp" alt="" class="h-full w-full row-span-1">
			</SectionLayout>
			<SectionLayout containerClass="flex gap-x-[2px] max-[1200px]:flex-col gap-y-6">
				<a href="/organic-store/vegetables" class="flex flex-col gap-2 grow basis-0 [&:hover>div:nth-child(1)>img]:scale-110">
					<img src="/organic-store/vegetables.webp" alt="" class="transition duration-200 h-[300px] rounded-md">
					<div class="text-sm font-medium text-center">Organic Fruits and Vegetables</div>
				</a>
				<a href="/organic-store/products" class="flex flex-col gap-2 grow basis-0 [&:hover>div:nth-child(1)>img]:scale-110">
					<img src="/organic-store/products.webp" alt="" class="transition duration-200 h-[300px] rounded-md">
					<div class="text-sm font-medium text-center">Organic Products</div>
				</a>
			</SectionLayout>
			<SectionLayout containerClass="flex flex-col gap-8 bg-[#F9F9F9] p-8 rounded-md self-center">
				<div class="text-xl text-center font-medium">Find us at</div>
				<div class="flex gap-6 flex-wrap justify-center">
					<div class="flex flex-col gap-6 w-[min(700px,100%)]">
						<div class="flex gap-4">
							<img src="/organic-store/address.svg" alt="" class="h-[30px]">
							<div>
								Saldanha Kieran Apartments - II, Near Mapusa Court Junction, Opposite Sangeeta Mobile, Next to Union Restaurant, Mapusa, Goa 403507
							</div>
						</div>
						<div class="flex gap-4">
							<img src="/organic-store/phone.svg" alt="" class="h-[30px]">
							<div>+91 89566 91426/7</div>
						</div>
						<div class="flex gap-4 items-start">
							<img src="/organic-store/instagram.svg" alt="" class="h-[30px]">
							<a href="https://www.instagram.com/nims.organichub/" target="_blank">
								<img src="/organic-store/instaHandle.webp" alt="">
							</a>
						</div>
					</div>
					<div class="w-[min(700px,100%)]">
						<img src="/organic-store/map.webp" alt="" class="h-full">
					</div>
				</div>
			</SectionLayout>
    </MainLayout>
  </body>
</html>